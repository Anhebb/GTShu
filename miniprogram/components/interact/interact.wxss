/* components/interact/interact.wxss */
.item-contain {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.item-top {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding-right: 40rpx;
  box-sizing: border-box;
margin: 50rpx 40rpx;
}
.time-mark {
  width:300rpx;
  height:60rpx;
  background:rgba(59,73,224,1);
  border-radius:0px 30rpx 30rpx 0rpx;
  padding-left: 20rpx;
  color: #fff;
}

.time-mark text {
  line-height: 60rpx;
  font-size:28rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
}

.user-name  text{
  font-size:26rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(59,73,224,1);
}
.item-middle {
  width: 670rpx
}

.middle-comment {
  width: 100%;
}

.middle-comment text{
  font-size:26rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
}

.item-bottom{
  margin: 30rpx;
}

.dynamic {
  background:rgba(248,248,248,1);
  border: 2rpx solid #ccc;
  padding: 20rpx;
width:675rpx;
overflow: hidden;
}

.dynamic  text{
  font-size:26rpx;
font-family:SourceHanSansCN-Regular;
font-weight:400;
color:rgba(102,102,102,1);
overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
