/* components/dynamic/dynamic.wxss */
.item-contain {
  width: 750rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  margin: 30rpx auto;
  border-top: 2rpx solid #ccc;
  border-bottom: 2rpx solid #ccc;
  box-shadow: 0px 2px 10px #666

}

.item-head {
  display: flex;
  justify-content: space-between;
  margin: 15rpx 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-top: 15rpx;
}

.user-photo {
  width: 86rpx;
  height: 86rpx;
  margin-right: 22rpx;
  border-radius: 50%;
}

.user-name {
  font-size:34rpx;
font-family:SourceHanSansCN-Regular;
font-weight:400;
color:rgba(51,51,51,1);
}

.time {
  display: flex;
  flex-flow: nowrap;
  align-items: center;
}

.time text{
  font-size:22rpx;
font-family:SourceHanSansCN-Regular;
font-weight:400;
color:rgba(156,162,187,1);
}

.item-body {
  display: flex;
  flex-direction: column;
}

.content-text {
  margin: 5rpx 50rpx;
}
.content-text text {  
font-size:26rpx;
font-family:SourceHanSansCN-Regular;
font-weight:400;
color:rgba(102,102,102,1);
}

.content-photo {
display: flex;
flex-flow: wrap;
/* justify-content: center; */ /* 心形彩蛋*/
margin: 15rpx 50rpx;
}

.content-photo image{
  width: 195rpx;
  height: 195rpx;
  margin: 10rpx 10rpx;
  border-radius: 3%;
}

.item-foot {
  display: flex;
  justify-content: flex-end;
  margin-right: 70rpx;
  margin-bottom: 30rpx;
}

.like,
.comment {
    display: flex;
    align-items: center;
}

.comment {
  margin-right: 65rpx;
}


.foot-icon {
  width: 26rpx;
  height: 26rpx;
  margin-right: 12rpx;
}

.foot-text {
  font-size:24rpx;
  font-family:SourceHanSansCN-Regular;
  font-weight:400;
  color:rgba(156,162,187,1);
}
